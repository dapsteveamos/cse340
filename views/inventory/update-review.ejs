<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.render('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<form action="/inv/detail/update/<%= locals.review_id %>" method="post" id="updateReview">
    <label for="review_text">Review</label>
    <textarea name="review_text" id="review_text" required><%= locals.review_text %></textarea>

    <button type="submit">Update Review</button>
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
</form>